{
  "name": "regexlab",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build"
  },
  "build": {
    "appId": "com.postalley.regexlab",
    "productName": "RegexLab",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "assets/icons/rglab.icns"
    },
    "win": {
      "target": ["nsis"],
      "icon": "assets/icons/rglab.ico"
    },
    "linux": {
      "target": ["deb", "rpm"],
      "icon": "assets/icons/rglab.png"
    }
  },
  "devDependencies": {
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12"
  }
}
